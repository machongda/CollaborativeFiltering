page {
    height: 100%;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    background-color: #f2f2f2;
    padding: 1%;

}

/*登录图片*/
.login-icon {
    width: 100%;
}

.login-img {
    width: 100%;
}

/*表单内容*/
.login-from {
    margin-top: 20px;
    flex: auto;
    height: 100%;
}

.inputView {
    background-color: #fff;
    line-height: 44px;
}

/*输入框*/
.nameImage,
.keyImage {
    margin-left: 22px;
    width: 14px;
    height: 14px
}

.loginLab {
    margin: 15px 15px 15px 10px;
    color: #545454;
    font-size: 14px
}

.inputText {
    flex: block;
    float: right;
    text-align: right;
    margin-right: 22px;
    margin-top: 11px;
    color: #cccccc;
    font-size: 14px
}

.line {
    width: 100%;
    height: 1px;
    background-color: #cccccc;
    margin-top: 1px;
}

/*按钮*/
.loginBtnView {
    width: 100%;
    height: auto;
    background-color: #f2f2f2;
    margin-top: 0px;
    margin-bottom: 0px;
    padding-bottom: 0px;
}

.loginBtn {
    width: 80%;
    margin-top: 35rpx;
}

.item {
    height: 75rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    border: none;
}

.item .left {
    width: 10%;
    height: 100%;
    margin-left: 10%;
    display: flex;
    flex-direction: column;
}

.item .left .imageIcon {

    width: 50%;
    height: 50%;
    display: block;
    margin: auto;
}

.item .right .imageIcon {

    width: 15%;
    height: 30%;
    margin: auto;
    display: block;
}

.item .center {

    width: 60%;
    height: 100%;
    line-height: 75rpx;
    font-size: 35rpx;
}

button .center {

    margin-left: 0;
    text-align: left;
}

.item .right {
    position: relative;
    width: 20%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

button {
    padding: 0;
    background-color: transparent;
    border: none;
}

button::after {
    border: none
}

.avatar {
    margin-top: 65rpx;
}

.background1 {
    height: 200rpx;
    background: -webkit-linear-gradient(left, rgb(148, 205, 252), rgb(153, 160, 255), rgb(255, 165, 255));
    /* border-radius: 30rpx; */
    background-repeat: no-repeat;
    background-size: 100% 100%;
    -moz-background-size: 100% 100%;
}
